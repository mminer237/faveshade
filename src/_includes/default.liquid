<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>{% if title %}{{ title }} – {{ site.title }}{% else %}{{ site.title }}{% endif %}</title>
		<meta property="og:title" content="{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}">
		<meta property="og:description" name="description" content="{% if description %}{{ description | xml_escape }}{% else %}{{ excerpt | xml_escape }}{% endif %}">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% favicons 'src/logo.svg' %}
		{% if site.themeColor %}
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="{{ site.themeColor }}">
		<meta name="msapplication-TileColor" content="{{ site.themeColor }}">
		<meta name="theme-color" content="{{ site.themeColor }}">
		{% endif %}
		{% for font in site.googleFonts %}
		<link href="https://fonts.googleapis.com/css?family={{ font }}&display=swap" rel="stylesheet">
		{% endfor %}
		<link rel="stylesheet" href="/styles/style.css">
		{% for style in styles %}
		<link rel="stylesheet" href="{{ style }}">
		{% endfor %}
		{% for script in scripts %}
		<script src="{{ script }}" defer></script>
		{% endfor %}
	</head>
	<body>
		<header>
			<a href="/">
				<h1><span class="fave">Fave</span><span class="shade">Shade<sup>™</sup></span></h1>
			</a>
		</header>
		<main>
			{{ content }}
		</main>
		<footer><div>Made by <a href="https://matthewminer.name">Matthew Miner</a></div></footer>
	</body>
</html>